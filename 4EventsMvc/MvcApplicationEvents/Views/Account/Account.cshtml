
@{
    ViewBag.Title = "Account";
}
@using MvcApplicationEvents.Models;
@model Account

<h2>Account Information</h2>

@using (Html.BeginForm("", "", Model))
{ 
    <div class="form-group">
        <div class="col-xs-12 col-sm-12 col-md-offset-3 col-md-6 col-lg-offset-4 col-lg-4">
            <label for="naam">Username</label>
            <input type="password" id="" name="Username" value="@Model.Username" class="form-control" />
        </div> 
    </div>
    <div class="form-group">
        <div class="col-xs-12 col-sm-12 col-md-offset-3 col-md-6 col-lg-offset-4 col-lg-4">
            <label for="naam">Password</label>
            <input type="password" id="" name="Password" value="" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-12 col-sm-12 col-md-offset-3 col-md-6 col-lg-offset-4 col-lg-4">
            <label for="naam">Password again</label>
            <input type="password" id="" name="PasswordA" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-12 col-sm-12 col-md-offset-3 col-md-6 col-lg-offset-4 col-lg-4">
            <label for="naam">E-mail</label>
            <input type="text" id="" name="Email" value="@Model.Email" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-xs-12 col-sm-12 col-md-offset-3 col-md-6 col-lg-offset-4 col-lg-4">
            <input name="btnChange" type="submit" value="Confirm Change" class="btn btn-primary btnOpmaak4" />
        </div>
    </div>
}

