
@{
    ViewBag.Title = "Login";
}
@using MvcApplicationEvents.Models;
@switch (Convert.ToString(CurrentAccount.Function))
{
    case "Bezoeker":
        CurrentAccount.ID = 1;
        break;
    case "Beheerder":
        CurrentAccount.ID = 2;
        break;
    case "AccountBeheerder":
        CurrentAccount.ID = 3;
        break;
    case "Medewerker":
        CurrentAccount.ID = 4;
        break;
}

<img class="col-xs-12 col-sm-12 col-md-offset-3 col-md-6 col-lg-offset-4 col-lg-4" alt="Logo goes here" />
<br />
<form role="form" class="form-horizontal" action=@Url.Action("Validate", "Login") method="post">

    <div class="form-group">
        <div class="col-xs-12 col-sm-12 col-md-offset-3 col-md-6 col-lg-offset-4 col-lg-4">
            <label for="naam">Naam</label>
            <input type="text" name="tbName" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-xs-12 col-sm-12 col-md-offset-3 col-md-6 col-lg-offset-4 col-lg-4">
            <label for="naam">Wachtwoord</label>
            <input type="password" name="tbPassword" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-xs-12 col-sm-12 col-md-offset-3 col-md-6 col-lg-offset-4 col-lg-4">
            <input name="LoginSubmit" type="submit" value="Login" class="btn btn-primary" />&nbsp; &nbsp;<input name="LoginSubmit" type="submit" value="Register" class="btn btn-primary" />
        </div>
    </div>
</form>
